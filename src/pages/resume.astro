---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Resume | Anthony Dsouza";
const description = "Resume of Anthony Dsouza";
---

<BaseLayout title={title} description={description} current="resume">
  <section class="resume-section">
    <div class="resume-viewer">
      <iframe
        src="/assets/Anthony's Resume .pdf"
        title="Anthony Dsouza Resume"
      ></iframe>
    </div>
  </section>
</BaseLayout>

<style>
  .resume-section {
    padding: 1rem 0;
  }

  .resume-section h1 {
    margin-bottom: 1rem;
  }

  .resume-viewer {
    width: 100%;
    height: 85vh;
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 8px;
    overflow: hidden;
  }

  iframe {
    width: 100%;
    height: 100%;
    border: none;
  }
</style>
