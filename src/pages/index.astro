---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Anthony D\'souza';
const description = 'Gameplay programmmer';
const permalink = Astro.site.href;

const projects = [
  {
    name : "Demo Project",
    tags : ["Unity" , "C#"],
    desc : "This is a demo project"
  },{
    name : "Demo Project",
    tags : ["Unity" , "C#"],
    desc : "This is a demo project"
  },{
    name : "Demo Project",
    tags : ["Unity" , "C#"],
    desc : "This is a demo project"
  }
];
---



<!--Home section-->

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="home-container">
    <div class="home-copy">
      <h1 >Hi, I'm Anthony Dsouza</h1>
      <p> I'm a Game developer</p>
    </div>

    <!--Project section-->
    <section class="projects-section">
    <h2>Projects</h2>
    </div class = "project-grid">

    </div>
    </section>

</BaseLayout>

<style>
  .home-container {
    align-items: center;
    text-align: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .projects-section{
    margin-top : 4em;
    padding : 2e;
  }

  .projects-section h2{
      font-size: 2.2rem:
      margin-bottom: 1.5em;
      text-align: center;
  }

  .project-grid{
    display: grid;
    grid-template-column: repeat  (auto-fit,minmax(280px,1fr));
    gap: 1.5em;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .caption {
    font-size: .8em;
    font-style: italic;
    text-align: left;
  }

  .hero-image {
    width: 100%;
    max-width: 550px;
    margin-bottom: 1em;
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }
</style>
